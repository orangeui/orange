{
  "name": "orange",
  "version": "1.0.0",
  "description": "cool stuff here",
  "scripts": {
    "watch": "nodemon --watch src/ -e js,scss -x \"npm run build-js\"",
    "build-js": "uglifyjs --compress --mangle -o ../dist/js/orange.min.js -- ./js/src/**/*.js ./js/src/*.js",
    "build-scss": "node-sass --include-path sass ./scss/src/styles.scss ../dist/css/orange.min.css --output-style compressed"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "modern-normalize": "^0.5.0"
  },
  "devDependencies": {
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "uglify-js": "^3.6.0"
  }
}
